{
  "name": "@taxbridge/backend",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start:digitax-mock": "ts-node src/mocks/digitaxMock.ts",
    "db:migrate": "node db/migrate.js",
    "queue:worker": "ts-node src/queue/index.ts",
    "dev": "ts-node src/server.ts",
    "ocr:test": "ts-node src/tools/ocr-test.ts",
    "ocr:assert": "ts-node src/tools/ocr-assert.ts",
    "build": "tsc -p tsconfig.json",
    "build:prod": "tsc -p tsconfig.json && npm run ubl:download-xsd",
    "start": "node dist/src/server.js",
    "start:prod": "NODE_ENV=production node dist/src/server.js",
    "worker": "node dist/src/queue/index.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:security": "bash security-tests/run-tests.sh http://localhost:3000",
    "test:performance": "k6 run load-test/k6-script.js",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:api": "jest --testPathPattern=integration --testNamePattern='(Duplo|Remita)'",
    "security:audit": "npm audit --audit-level=moderate",
    "security:check": "npm run security:audit && npm run test:security",
    "ubl:validate": "ts-node src/tools/ubl-validate.ts",
    "ubl:validate:prod": "node dist/src/tools/ubl-validate.js",
    "ubl:download-xsd": "mkdir -p lib && curl -fsSL https://docs.peppol.eu/poacc/billing/3.0/files/UBL-Invoice-2.1.xsd -o lib/ubl-invoice-2.1.xsd || true",
    "health:check": "curl -f http://localhost:3000/health && curl -f http://localhost:3000/health/duplo && curl -f http://localhost:3000/health/remita",
    "lint": "eslint src/ --ext .ts --max-warnings 0",
    "lint:fix": "eslint src/ --ext .ts --fix"
  },
  "dependencies": {
    "@fastify/compress": "^8.3.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^12.0.1",
    "@fastify/swagger": "^9.5.1",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^8.31.0",
    "@sentry/tracing": "^7.120.3",
    "@types/node": "^25.0.3",
    "africastalking": "^0.7.8",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.66.4",
    "dompurify": "^3.1.6",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^4.3.2",
    "fastify": "^5.6.2",
    "fastify-type-provider-zod": "^6.1.0",
    "ioredis": "^5.8.2",
    "jimp": "^0.16.1",
    "jsdom": "^26.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "openapi-types": "^12.1.3",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "speakeasy": "^2.0.0",
    "tesseract.js": "^4.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "xml2js": "^0.6.2",
    "xmlbuilder2": "^4.0.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.8",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "xmldom": "^0.6.0"
  }
}
